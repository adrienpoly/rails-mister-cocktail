<h1><%= @cocktail.name %></h1>
<h3>Ingredients</h3>
<ul>
  <% @cocktail.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
  <% end %>
</ul>
<h3>Recipe</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
