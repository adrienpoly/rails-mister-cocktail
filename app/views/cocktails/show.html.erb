<h1 class='text-center'><%= @cocktail.name.capitalize %></h1>
<p>categrory : <%= @cocktail.category %></p>
<p>instructions : <%= @cocktail.instructions %></p>
<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<h3>Recipe</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
<%= render 'doses/form', dose: @dose %>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
<%= link_to 'Edit cocktail', edit_cocktail_path(@cocktail) %> |
