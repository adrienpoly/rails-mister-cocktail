<%= simple_form_for(@cocktail) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :name %>
  </div>
  <div class="form-doses">
    <h3>Doses</h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %></li>
      <% end %>
    </ul>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
