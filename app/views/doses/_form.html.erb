<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%#= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :ingredient_id,label: 'Ingredient', collection: Ingredient.names_with_index %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
